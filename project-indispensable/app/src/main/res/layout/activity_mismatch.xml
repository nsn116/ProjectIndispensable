<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
  android:background="@color/blue"
    tools:context=".MismatchActivity">

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:paddingLeft="40dp"
      android:paddingRight="40dp"
      android:gravity="center">
        <TextView
          android:paddingTop="70dp"
          android:paddingBottom="20dp"
          android:id="@+id/mismatch"
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          android:textSize="40sp"
          android:fontFamily="@font/comfortaa_regular"
          android:textColor="#FFF"
          android:text="Mismatch"/>
        <ImageView
          android:layout_width="160dp"
          android:layout_height="160dp"
          android:paddingBottom="20dp"
          android:src="@drawable/mismatch"/>
        <TextView
          android:id="@+id/mismatch_text"
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          android:gravity="center"
          android:textColor="#FFF"
          android:textSize="20sp"
          android:text="Uh oh...it looks like you've received the wrong medication. Please go back to see your pharmacist!"/>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
